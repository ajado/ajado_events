<T3DataStructure>
  <sheets>
    <sDEF>
      <ROOT>
          <TCEforms>
          <sheetTitle>Event Beschreibung</sheetTitle>
          </TCEforms>
          <type>array</type>
          <el>
		<settings.date>
			<TCEforms>
				<label>Datum</label>
				<config>
					<type>input</type>
					<size>30</size>
					<max>20</max>
					<eval>date</eval>
					<checkbox></checkbox>
					<default></default>
				</config>
			</TCEforms>
		</settings.date>
        <settings.image>
			<TCEforms>
	      		<label>Image</label>
	      		<config>
	      			<type>group</type>
	      			<internal_type>file</internal_type>
	      			<allowed>jpg,jpeg,gif,png</allowed>
	      			<max_size>10000</max_size>
	      			<uploadfolder>uploads/tx_ajadoevents</uploadfolder>
	      			<size>1</size>
	      			<minitems>0</minitems>
	      			<maxitems>1</maxitems>
	      		</config>
	      	</TCEforms>
      	</settings.image>
        <settings.subtitle>
			<TCEforms>
			<label>Subtitle</label>
				<config>
					<type>input</type>
					<size>30</size>
					<max>100</max>
					<eval>trim</eval>
				</config>
			</TCEforms>
		</settings.subtitle>
        <settings.title>
			<TCEforms>
			<label>Title</label>
				<config>
					<type>input</type>
					<size>30</size>
					<max>100</max>
					<eval>trim</eval>
				</config>
			</TCEforms>
		</settings.title>
        <settings.location>
			<TCEforms>
			<label>Location</label>
				<config>
					<type>input</type>
					<size>30</size>
					<max>100</max>
					<eval>trim</eval>
				</config>
			</TCEforms>
		</settings.location>
		<settings.text type="array">
		  <TCEforms type="array">
		    <config type="array">
		      <type>text</type>
		      <cols>48</cols>
		      <rows>5</rows>
		    </config>
		    <label>Body</label>
		    <defaultExtras>richtext[cut|copy|paste|formatblock|bold|italic|underline]:rte_transform[mode=css]</defaultExtras>
		  </TCEforms>
		</settings.text>
		<settings.link>
			<TCEforms>
				<label>Ticket Link</label>
				<config>
					<type>input</type>
					<size>30</size>
					<max>256</max>
					<checkbox></checkbox>
					<wizards type="array">
					<_PADDING>2</_PADDING>
					<link type="array">
						<type>popup</type>
						<title>Ticket Link</title>
						<icon>link_popup.gif</icon>
						<script>browse_links.php?mode=wizard</script> 
						<JSopenParams>height=300,width=500,status=0,menubar=0,scrollbars=1</JSopenParams>
					</link>
					</wizards>
				</config>
			</TCEforms>
		</settings.link>
          </el>
       </ROOT>
    </sDEF>
  </sheets>
</T3DataStructure>